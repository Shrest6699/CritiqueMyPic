<% layout('layouts/boilerplate') %>

    <div class="row">
        <h1 class="text-center">Edit your Post</h1>

        <div class="col-6 offset-3">
            <form action="/posts/<%= post._id %>?_method=PUT" method="POST">
                <div class="mb-3">
                    <label class="form-label" for="title"> Title</label>
                    <input class="form-control" type="text" id="title" name='post[title]' value='<%= post.title %>'>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="image"> Image URL</label>
                    <input class="form-control" type="text" id="image" name='post[image]' value='<%= post.image %>'>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="description"> Description</label>
                    <textarea class="form-control" type="text" id="description" name='post[description]'>
                        <%= post.description %>
                    </textarea>
                </div>

                <div class="mb-3">
                    <button class="btn btn-info"> Update Post </button>
                </div>
            </form>

            <footer>
                <a href="/posts/<%= post._id %> ">Back to Post</a>
            </footer>
        </div>

    </div>

